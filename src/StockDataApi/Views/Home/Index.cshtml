@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Stock Data Dashboard</h1>
    <p>Access and analyze stock data including short interest, short volume, and borrow fees.</p>
</div>

<!-- React Dashboard Container -->
<div id="dashboard-container" class="dashboard-container"></div>

<!-- Legacy Dashboard (will be removed after React migration is complete) -->
<div class="legacy-dashboard" style="display: none;">
    <div class="row mt-4">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Date Range Selection</h5>
                </div>
                <div class="card-body">
                    <div id="date-range-picker-container"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Short Interest Data</h5>
                </div>
                <div class="card-body">
                    <div class="input-group mb-3">
                        <input type="text" id="shortInterestSymbol" class="form-control" placeholder="Enter stock symbol (e.g., SPY)">
                        <button class="btn btn-primary" type="button" id="loadShortInterestBtn">Load Data</button>
                    </div>
                    <canvas id="shortInterestChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Short Volume Data</h5>
                </div>
                <div class="card-body">
                    <div class="input-group mb-3">
                        <input type="text" id="shortVolumeSymbol" class="form-control" placeholder="Enter stock symbol (e.g., AAPL)">
                        <select id="shortVolumeExchange" class="form-select">
                            <option value="nasdaq">NASDAQ</option>
                            <option value="nyse">NYSE</option>
                        </select>
                        <button class="btn btn-primary" type="button" id="loadShortVolumeBtn">Load Data</button>
                    </div>
                    <canvas id="shortVolumeChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Borrow Fee Data</h5>
                </div>
                <div class="card-body">
                    <div class="input-group mb-3">
                        <input type="text" id="borrowFeeSymbol" class="form-control" placeholder="Enter stock symbol (e.g., GME)">
                        <select id="borrowFeeExchange" class="form-select">
                            <option value="nasdaq">NASDAQ</option>
                            <option value="nyse">NYSE</option>
                        </select>
                        <button class="btn btn-primary" type="button" id="loadBorrowFeeBtn">Load Data</button>
                    </div>
                    <canvas id="borrowFeeChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Data Management</h5>
                </div>
                <div class="card-body">
                    <div class="input-group mb-3">
                        <input type="text" id="refreshSymbol" class="form-control" placeholder="Enter stock symbol (e.g., TSLA)">
                        <select id="refreshExchange" class="form-select">
                            <option value="nasdaq">NASDAQ</option>
                            <option value="nyse">NYSE</option>
                        </select>
                        <button class="btn btn-success" type="button" id="refreshDataBtn">Refresh Data</button>
                    </div>
                    <div class="d-grid gap-2 mt-3">
                        <button class="btn btn-warning" type="button" id="refreshAllTickersBtn">Refresh All Tickers</button>
                    </div>
                    <div id="refreshStatus" class="alert mt-3" style="display: none;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
}

